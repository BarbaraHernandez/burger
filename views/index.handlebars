<div class="container">
    <div class="jumbotron">
        EAT ME
        <img src="./public/assets/img/burger.js">
    </div>
    <div class="row">
        <div class="col-md-5">
            <h2>Burgers to Eat</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{id}}.{{burger_name}}
                            <button value="{{id}}" id="devour">Devour it!</button>   
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <h2>Been There, Ate That</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p>{{id}}. {{burger_name}}</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="column-md-6">
            <h2>Add A Burger</h2>
            <form id="burger-form">
                <div class="form-group">
                    <label for="new-burger">Burger Name</label>
                    <input class="form-control" id="new-burger">
                </div>
                <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
            </form>
        </div>
    </div>
</div>




